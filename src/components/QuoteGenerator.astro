<div class="max-w-2xl mx-auto">
  <div id="quote-container" class="bg-white/10 dark:bg-gray-800/30 backdrop-blur-sm rounded-lg p-6 border border-white/20 dark:border-gray-700/30">
    <blockquote id="quote-text" class="text-lg md:text-xl text-gray-700 dark:text-gray-300 italic mb-4 min-h-[3rem] flex items-center justify-center">
      Loading inspiration...
    </blockquote>
    <cite id="quote-author" class="text-sm text-gray-500 dark:text-gray-400 block text-right">
      —
    </cite>
  </div>
  
  <button 
    id="new-quote-btn"
    class="mt-4 px-4 py-2 text-sm text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 transition-colors flex items-center gap-2 mx-auto"
  >
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
    </svg>
    New Quote
  </button>
</div>

<script>
  const quotes = [
    { text: "Code is poetry written in logic.", author: "Anonymous" },
    { text: "The best way to predict the future is to create it.", author: "Peter Drucker" },
    { text: "Simplicity is the ultimate sophistication.", author: "Leonardo da Vinci" },
    { text: "Design is not just what it looks like and feels like. Design is how it works.", author: "Steve Jobs" },
    { text: "The only way to do great work is to love what you do.", author: "Steve Jobs" },
    { text: "Innovation distinguishes between a leader and a follower.", author: "Steve Jobs" },
    { text: "Code never lies, comments sometimes do.", author: "Ron Jeffries" },
    { text: "First, solve the problem. Then, write the code.", author: "John Johnson" },
    { text: "Experience is the name everyone gives to their mistakes.", author: "Oscar Wilde" },
    { text: "The computer was born to solve problems that did not exist before.", author: "Bill Gates" }
  ];
  
  const quoteText = document.getElementById('quote-text');
  const quoteAuthor = document.getElementById('quote-author');
  const newQuoteBtn = document.getElementById('new-quote-btn');
  
  let currentQuoteIndex = 0;
  
  function typeWriter(element, text, speed = 50) {
    element.textContent = '';
    let i = 0;
    
    function type() {
      if (i < text.length) {
        element.textContent += text.charAt(i);
        i++;
        setTimeout(type, speed);
      }
    }
    
    type();
  }
  
  function displayQuote(index) {
    const quote = quotes[index];
    typeWriter(quoteText, `"${quote.text}"`);
    setTimeout(() => {
      quoteAuthor.textContent = `— ${quote.author}`;
    }, quote.text.length * 50 + 500);
  }
  
  function getRandomQuote() {
    let newIndex;
    do {
      newIndex = Math.floor(Math.random() * quotes.length);
    } while (newIndex === currentQuoteIndex && quotes.length > 1);
    
    currentQuoteIndex = newIndex;
    displayQuote(currentQuoteIndex);
  }
  
  // Display initial quote
  displayQuote(currentQuoteIndex);
  
  // New quote button
  newQuoteBtn?.addEventListener('click', getRandomQuote);
  
  // Auto-rotate quotes every 10 seconds
  setInterval(getRandomQuote, 10000);
</script>